<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp"/>

            <solid android:color="#FFFF00"/>

            <stroke
                android:width="20dp"
                android:color="#FF0"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp"/>

            <solid android:color="#FFF100"/>

            <stroke
                android:width="10dp"
                android:color="#FFF100"/>
        </shape>
    </item>
</selector>